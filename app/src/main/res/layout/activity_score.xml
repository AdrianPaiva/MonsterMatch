<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"

    tools:context="ca.gbc.mobile.adrianpaiva.matchit.ScoreActivity">

    <!--
        *************************************************
        * Adrian Paiva
        * 100864588
        * ‎Friday, ‎October ‎3, ‎2014
        * lastEdit: October ‎11, ‎2014
        **************************************************-->

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scoreListView"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:divider="#FFCC00"
        android:dividerHeight="2dp"
        android:layout_weight="1"
        android:layout_alignParentStart="true"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home"
        android:textColor="#f18"
        android:id="@+id/button2"
        android:layout_alignBottom="@+id/scoreListView"
        android:layout_alignRight="@+id/scoreListView"
        android:layout_alignEnd="@+id/scoreListView"
        android:onClick="goHome" />

</RelativeLayout>
